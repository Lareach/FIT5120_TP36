@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <div class="banner">
        <div>
            <p>SHOWCASING INNOVATIVE</p>
            <p>AUSTRALIAN APPROACHES TO</p>
            <p>CARBON EMISSIONS</p>
            <p>REDUCTION</p>

            @Html.ActionLink("CLIMATE ACTION »", "ClimateAction", "Home", null, new { @class = "btn btn-outline-dark-big" })
        </div>
    </div>
</div>

<!-- stats block -->
<section class="pt-4 pb-5" id="stats">
    <div class="container pb-md-5 pb-4">
        <div class="text-center mx-auto mb-md-5 mb-4" style="max-width:500px;">
            <h1 style="color: cadetblue;"> We’re thinking globally, acting locally </h1>
        </div>

        <div class="row text-center pt-4">
            <div class="col-md-3 col-6">
                <div class="counter">
                    <img src="~/assets/images/icon-1.png" alt="" class="img-fluid">
                    <div class="timer count-title count-number mt-sm-1" data-to="36076" data-speed="1500"></div>
                    <p>Statistic 1</p>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="counter">
                    <img src="~/assets/images/icon-2.png" alt="" class="img-fluid">
                    <div class="timer count-title count-number mt-3" data-to="786" data-speed="1500"></div>
                    <p>Statistic 2</p>
                </div>
            </div>
            <div class="col-md-3 col-6 mt-md-0 mt-5">
                <div class="counter">
                    <img src="~/assets/images/icon-3.png" alt="" class="img-fluid">
                    <div class="timer count-title count-number mt-3" data-to="3630" data-speed="1500"></div>
                    <p>Statistic 3</p>
                </div>
            </div>
            <div class="col-md-3 col-6 mt-md-0 mt-5">
                <div class="counter">
                    <img src="~/assets/images/icon-4.png" alt="" class="img-fluid">
                    <div class="timer count-title count-number mt-3" data-to="6300" data-speed="1500"></div>
                    <p>Statistic 4</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //stats block -->

<div class="home-feature-bg" id="features">
    <div class="container">
        <div class="title-main">
            <h3 class="feature-title">Title</h3>
            <p class="feature-subtitle">Subtitle</p>
        </div>

        <div class="row">
            <!-- First feature Card -->
            <div class="col-md-6 feature-card">
                <img src="https://images.pexels.com/photos/7005760/pexels-photo-7005760.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Gov Support" class="img-fluid" />
                <div class="feature-content">
                    <h4>Governmental Support</h4>
                    <p>Current Funding Opportunities</p>
                    <p>Self-assessment on the Government's Grants Questionnaire</p>
                </div>
            </div>

            <!-- Second feature Card -->
            <div class="col-md-6 feature-card">
                <img src="https://images.pexels.com/photos/4992628/pexels-photo-4992628.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Solar" class="img-fluid" />
                <div class="feature-content">
					<h4>Solar Energy</h4>
					<p>Energy Improvement Programs</p>
					<p>Solar Installer Near You</p>
                </div>
            </div>

            <!-- Third feature Card -->
            <div class="col-md-6 feature-card">
                <img src="~/assets/images/c3.jpg" alt="Efficient Design" class="img-fluid" />
                <div class="feature-content">
					<h4>Efficient Design</h4>
					<p>Efficient Design</p>
					<p>Autumn and Winter Energy-Saving Tips</p>
					<p>Energy Efficient House Tour</p>
                </div>
            </div>

            <!-- Fourth feature Card -->
            <div class="col-md-6 feature-card">
                <img src="~/assets/images/c3.jpg" alt="Home Carbon" class="img-fluid" />
                <div class="feature-content">
					<h4>Home Carbon Footprint</h4>
					<p>Carbon Calculator</p>
                </div>
            </div>
        </div>
    </div>
</div>
