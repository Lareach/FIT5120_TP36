<!DOCTYPE html>
 <html lang="en">
 <head>
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1.0" />
     <title>Home Emissions</title>

     <script src="~/js/nodeData.js"></script>
     <script src="~/js/modelViewer.js"></script>

     <script src="https://cdn.babylonjs.com/babylon.js"></script>
     <script src="https://cdn.babylonjs.com/loaders/babylonjs.loaders.min.js"></script>
     <script src="https://cdn.babylonjs.com/gui/babylon.gui.min.js"></script>
     <script src="~/lib/jquery/dist/jquery.min.js"></script>

     <link rel="shortcut icon" href="~/favicon.ico">
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
     <link rel="stylesheet" href="~/Co2HomeEmissionsTP36.styles.css" asp-append-version="true" />
     <link href="~/css/StyleSheet.css" rel="stylesheet" />
     <link rel="preload" href="/fonts/Segoe UI.woff" as="font" type="font/woff" crossorigin>
 </head>

 <body>
 <header>
     <div class="container-fluid text-center">
         <!-- Navigation Section -->
         <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="navbar-header">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand title-link">
                <img src="/images/carbon-footprint.png" />
                <span>Home Emissions</span>
            </a>
            </div>
             <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                 <span class="navbar-toggler-icon"></span>
             </button>
             <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                 <ul class="navbar-nav">
                     <li class="nav-item">
                         <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                     </li>
                     <li class="nav-item">
                         <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ClimateAction">Climate Action</a>
                     </li>
                    <li class="nav-item">
                         <a class="nav-link text-dark" asp-area="" asp-controller="CarbonCalculator" asp-action="Index">Carbon Calculator</a>
                     </li>
                     <li class="nav-item">
                         <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="GovernmentalSupport">Governmental Support</a>
                     </li>
                     <li class="nav-item">
                         <a class="nav-link text-dark" asp-area="" asp-controller="Questionnaire" asp-action="Index">Grants</a>
                     </li>
                     <li class="nav-item">
                         <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="InteractiveHouse">Interactive House</a>
                     </li>
                     <li class="nav-item">
                         <a class="nav-link text-dark" asp-area="" asp-controller="Photovoltaic" asp-action="Index">Photovoltaic</a>
                     </li>
                 </ul>
             </div>
         </nav>
     </div>
 </header>

 <!-- 2 different containers fo Homepage and for everything else -->
 <!-- Required to do this so that banner image is spread until side ends of page -->
 <div class="@("body-container" + (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? " home-container" : ""))">
     <main role="main" class="pb-3">
         @RenderBody()
     </main>
 </div>

 <footer class="border-top footer text-muted">
     <div class="container">
         &copy; 2024 - Home Emissions
     </div>
 </footer>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/plotly/plotly-2.30.0.min.js" asp-append-version="true"></script>
<script src="~/lib/bignumber.min.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/plot.js" asp-append-version="true"></script>


 @await RenderSectionAsync("Scripts", required: false)
 </body>
 </html>
